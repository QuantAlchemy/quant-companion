{
  "manifest_version": 3,
  "name": "SolidJS Web Extension",
  "version": "1.0",
  "description": "A basic web extension using SolidJS",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "permissions": ["activeTab"]
}
